{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["ESNext", "dom"],
    "target": "ESNext",
    "moduleResolution": "nodenext",
    "module": "ESNext",
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "tsPlusConfig": "./tsplus-config.json",
    "sourceMap": true,
    "paths": {
      "metabase-mailer/*": ["./src/*.js"]
    }
  },

  "include": ["src/**/*"],

  "ts-node": {
    "files": true
  }
}
