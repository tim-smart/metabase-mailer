{
  "compilerOptions": {
    "outDir": "dist",
    "inlineSourceMap": true,
    "lib": ["ESNext", "dom"],
    "target": "ESNext",
    "moduleResolution": "nodenext",
    "module": "ESNext",
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "tsPlusConfig": "./tsplus-config.json",
    "paths": {
      "metabase-mailer/*": ["./src/*.js"]
    }
  },

  "include": ["src/**/*"]
}
